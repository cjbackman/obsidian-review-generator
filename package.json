{
	"name": "obsidian-review-generator",
	"version": "1.0.0",
	"description": "Obsidian plugin that generates weekly review notes using LLM",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"format": "prettier --write src/",
		"format:check": "prettier --check src/",
		"prepare": "husky"
	},
	"keywords": [],
	"license": "0-BSD",
	"devDependencies": {
		"@eslint/js": "9.30.1",
		"@types/node": "^22.19.7",
		"@vitest/coverage-v8": "^4.0.18",
		"esbuild": "0.25.5",
		"eslint-plugin-obsidianmd": "0.1.9",
		"globals": "14.0.0",
		"husky": "^9.1.7",
		"jiti": "2.6.1",
		"prettier": "^3.8.1",
		"tslib": "2.4.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "8.35.1",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"obsidian": "latest"
	}
}
